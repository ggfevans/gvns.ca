---
import BaseLayout from '@layouts/BaseLayout.astro';
import Breadcrumb from '@components/Breadcrumb.astro';
import { breadcrumbSchema, normalizeSiteUrl, toJsonLd } from '@utils/json-ld';
import { relativeTime } from '@utils/format';

interface Track {
  name: string;
  artist: string;
  album?: string;
  albumArtUrl?: string;
  listenedAt?: string;
}

interface Artist {
  name: string;
  playCount: number;
  imageUrl?: string;
}

interface ListeningData {
  lastUpdated: string | null;
  recentTracks: Track[];
  topArtists: Artist[];
  stats: { tracksToday: number; artistsToday: number };
}

let listeningData: ListeningData = { lastUpdated: null, recentTracks: [], topArtists: [], stats: { tracksToday: 0, artistsToday: 0 } };
try {
  listeningData = (await import('../../data/listening.json')).default as ListeningData;
} catch (e) {
  if (import.meta.env.DEV) console.error('Failed to load listening data:', e);
}

const hasData = listeningData.recentTracks.length > 0 || listeningData.topArtists.length > 0;

const siteUrl = normalizeSiteUrl(Astro.site);
const breadcrumbJsonLd = toJsonLd(breadcrumbSchema([
  { name: 'Home', url: siteUrl },
  { name: 'Now', url: `${siteUrl}/now` },
  { name: 'Listen', url: `${siteUrl}/listen` },
]));

---

<BaseLayout
  title="Listen | gvns.ca"
  description="Tracking my music via ListenBrainz."
>
  <script type="application/ld+json" set:html={breadcrumbJsonLd} slot="head" />

  <main id="main-content" data-pagefind-body>
    <div class="listen-container">
      <Breadcrumb items={[
        { label: 'Home', href: '/' },
        { label: 'Now', href: '/now' },
        { label: 'Listen' },
      ]} />

      <header class="listen-header">
        <h1>Listen</h1>
        <p class="listen-subtitle">Tracking my music via ListenBrainz.</p>
      </header>

      {hasData ? (
        <div class="listen-content">
          {/* Stats bar */}
          {(listeningData.stats.tracksToday > 0 || listeningData.stats.artistsToday > 0) && (
            <div class="stats-bar">
              <span class="stats-accent">{listeningData.stats.tracksToday} tracks</span>
              {' '}from{' '}
              <span class="stats-accent">{listeningData.stats.artistsToday} artists</span>
              {' '}today
            </div>
          )}

          {/* Recent tracks */}
          {listeningData.recentTracks.length > 0 && (
            <section class="listen-section">
              <h2>Recent Tracks</h2>
              <ul class="track-list">
                {listeningData.recentTracks.map((track) => (
                  <li class="track-item">
                    <div class="track-art">
                      {track.albumArtUrl ? (
                        <img
                          src={track.albumArtUrl}
                          alt={`${track.album} album art`}
                          width="64"
                          height="64"
                          loading="lazy"
                          decoding="async"
                        />
                      ) : (
                        <div class="track-art-placeholder" aria-hidden="true">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" width="24" height="24">
                            <path d="M9 18V5l12-2v13" />
                            <circle cx="6" cy="18" r="3" />
                            <circle cx="18" cy="16" r="3" />
                          </svg>
                        </div>
                      )}
                    </div>
                    <div class="track-info">
                      <span class="track-name">{track.name}</span>
                      <span class="track-artist">{track.artist}</span>
                    </div>
                    {track.listenedAt && (
                      <time class="track-time" datetime={track.listenedAt}>
                        {relativeTime(track.listenedAt)}
                      </time>
                    )}
                  </li>
                ))}
              </ul>
            </section>
          )}

          {/* Top artists */}
          {listeningData.topArtists.length > 0 && (
            <section class="listen-section">
              <h2>Top Artists</h2>
              <div class="artist-grid">
                {listeningData.topArtists.map((artist) => (
                  <div class="artist-card">
                    <div class="artist-image">
                      {artist.imageUrl ? (
                        <img
                          src={artist.imageUrl}
                          alt={artist.name}
                          width="80"
                          height="80"
                          loading="lazy"
                          decoding="async"
                        />
                      ) : (
                        <div class="artist-image-placeholder" aria-hidden="true">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" width="28" height="28">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                            <circle cx="12" cy="7" r="4" />
                          </svg>
                        </div>
                      )}
                    </div>
                    <div class="artist-info">
                      <span class="artist-name">{artist.name}</span>
                      <span class="artist-plays">{artist.playCount} plays</span>
                    </div>
                  </div>
                ))}
              </div>
            </section>
          )}

          {/* Last updated */}
          {listeningData.lastUpdated && (
            <p class="last-updated">
              Last updated{' '}
              <time datetime={listeningData.lastUpdated}>
                {new Date(listeningData.lastUpdated).toLocaleDateString('en-GB', {
                  day: 'numeric',
                  month: 'long',
                  year: 'numeric',
                  hour: '2-digit',
                  minute: '2-digit',
                })}
              </time>
            </p>
          )}
        </div>
      ) : (
        <div class="listen-empty">
          <div class="empty-icon" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" width="48" height="48">
              <path d="M9 18V5l12-2v13" />
              <circle cx="6" cy="18" r="3" />
              <circle cx="18" cy="16" r="3" />
            </svg>
          </div>
          <p class="empty-message">
            ListenBrainz integration coming soon.
          </p>
          <p class="empty-detail">
            This page will show what I have been listening to once the data pipeline is wired up.
          </p>
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .listen-container {
    max-width: var(--width-content);
    margin-inline: auto;
    padding-inline: var(--space-6);
  }

  .listen-header {
    margin-bottom: var(--space-8);
  }

  .listen-header h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    letter-spacing: -0.02em;
    line-height: 1.1;
    margin-bottom: var(--space-2);
  }

  .listen-subtitle {
    font-size: var(--text-lg);
    color: var(--colour-text-secondary);
  }

  /* Stats bar */
  .stats-bar {
    display: inline-flex;
    align-items: center;
    gap: var(--space-1);
    font-size: var(--text-sm);
    font-family: var(--font-mono);
    color: var(--colour-text-secondary);
    background: var(--colour-bg-secondary);
    border: 1px solid var(--colour-border);
    border-radius: 6px;
    padding: var(--space-2) var(--space-4);
    margin-bottom: var(--space-8);
  }

  .stats-accent {
    color: var(--colour-p3-emerald);
    font-weight: 600;
  }

  /* Sections */
  .listen-section {
    margin-bottom: var(--space-12);
  }

  .listen-section h2 {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-bottom: var(--space-6);
    letter-spacing: -0.01em;
  }

  /* Track list */
  .track-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .track-item {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-3) var(--space-4);
    border-radius: 8px;
    transition: background var(--transition-fast);
  }

  .track-item:hover {
    background: var(--colour-bg-secondary);
  }

  .track-art img,
  .track-art-placeholder {
    width: 48px;
    height: 48px;
    border-radius: 6px;
    flex-shrink: 0;
  }

  .track-art img {
    object-fit: cover;
  }

  .track-art-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--colour-bg-tertiary);
    color: var(--colour-text-muted);
  }

  .track-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
    flex: 1;
  }

  .track-name {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--colour-text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .track-artist {
    font-size: var(--text-sm);
    color: var(--colour-text-secondary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .track-time {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--colour-text-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  /* Artist grid */
  .artist-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: var(--space-4);
  }

  .artist-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-6) var(--space-4);
    background: var(--colour-bg-secondary);
    border: 1px solid var(--colour-border);
    border-radius: 8px;
    transition: border-color var(--transition-fast);
    text-align: center;
  }

  .artist-card:hover {
    border-color: var(--colour-p3-emerald);
  }

  .artist-image img,
  .artist-image-placeholder {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .artist-image img {
    object-fit: cover;
  }

  .artist-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--colour-bg-tertiary);
    color: var(--colour-text-muted);
  }

  .artist-info {
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-width: 0;
    width: 100%;
  }

  .artist-name {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--colour-text-primary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .artist-plays {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--colour-p3-emerald);
  }

  /* Last updated */
  .last-updated {
    font-size: var(--text-sm);
    color: var(--colour-text-muted);
    margin-top: var(--space-8);
    padding-top: var(--space-4);
    border-top: 1px solid var(--colour-border);
  }

  /* Empty state */
  .listen-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: var(--space-16) var(--space-6);
    gap: var(--space-4);
  }

  .empty-icon {
    color: var(--colour-p3-emerald);
    opacity: 0.6;
    margin-bottom: var(--space-2);
  }

  .empty-message {
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--colour-text-primary);
  }

  .empty-detail {
    font-size: var(--text-base);
    color: var(--colour-text-secondary);
    max-width: 40ch;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .listen-header h1 {
      font-size: var(--text-3xl);
    }

    .track-art img,
    .track-art-placeholder {
      width: 40px;
      height: 40px;
    }

    .artist-grid {
      grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
    }
  }
</style>
