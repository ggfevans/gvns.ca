---
import PageLayout from '@layouts/PageLayout.astro';
import { breadcrumbSchema, normalizeSiteUrl, toJsonLd } from '@utils/json-ld';

const siteUrl = normalizeSiteUrl(Astro.site);
const breadcrumbJsonLd = toJsonLd(breadcrumbSchema([
  { name: 'Home', url: siteUrl },
  { name: 'Now', url: `${siteUrl}/now` },
]));
---

<PageLayout
  title="Now"
  description="What I'm up to right now."
>
  <script type="application/ld+json" set:html={breadcrumbJsonLd} slot="head" />
  <p class="text-lg text-zinc-400 leading-relaxed">
    Dashboard coming soon. In the meantime, check out what I'm
    <a href="/read" class="text-violet-500 no-underline transition-colors hover:text-violet-400">reading</a>,
    <a href="/listen" class="text-violet-500 no-underline transition-colors hover:text-violet-400">listening to</a>,
    <a href="/code" class="text-violet-500 no-underline transition-colors hover:text-violet-400">coding</a>, and
    <a href="/watch" class="text-violet-500 no-underline transition-colors hover:text-violet-400">watching</a>.
  </p>
</PageLayout>
