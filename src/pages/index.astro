---
import { getCollection } from 'astro:content';
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import { websiteSchema, normalizeSiteUrl, toJsonLd } from '@utils/json-ld';

const posts = (await getCollection('writing'))
  .filter((post) => import.meta.env.PROD ? !post.data.draft : true)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const siteUrl = normalizeSiteUrl(Astro.site);
const jsonLd = toJsonLd(websiteSchema(siteUrl));
---

<BaseLayout
  title="Gareth Evans â€” GVNS"
  description="Personal site for writing and shipped work. Serious work, questionable puns."
>
  <script type="application/ld+json" set:html={jsonLd} slot="head" />
  <main id="main-content" class="home">
    <section class="intro-section">
      <h1>Hi, I'm Gareth</h1>
      <p class="tagline">Serious work, questionable puns.</p>
      <p class="intro">
        Web developer on Vancouver Island. I write about homelab, self-hosting,
        web development, BJJ, and the occasional life observation.
      </p>
      <p class="cta">
        <a href="/write">Read the writing</a> or <a href="/about">learn more about me</a>.
      </p>
    </section>

    <section class="recent-posts">
      <h2>Recent Posts</h2>
      {posts.length > 0 ? (
        <div class="post-list">
          {posts.map((post) => (
            <PostCard post={post} />
          ))}
        </div>
        <a href="/write" class="view-all">View all writing &rarr;</a>
      ) : (
        <p class="no-posts">No posts yet. Check back soon!</p>
      )}
    </section>
  </main>
</BaseLayout>

<style>
  .home {
    max-width: var(--width-content);
    margin: 0 auto;
  }

  .intro-section {
    margin-bottom: 3rem;
  }

  h1 {
    font-size: var(--text-4xl);
    line-height: 1.2;
    letter-spacing: -0.01em;
    margin-bottom: 1rem;
  }

  .tagline {
    font-size: var(--text-lg);
    color: var(--colour-text-secondary);
    margin-bottom: 1rem;
  }

  .intro {
    font-size: var(--text-lg);
    color: var(--colour-text-secondary);
    margin-bottom: 1.5rem;
  }

  .cta a {
    color: var(--colour-accent-primary);
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 2px;
    transition: text-decoration-color var(--transition-fast);
  }

  .cta a:hover {
    text-decoration-color: var(--colour-accent-primary);
  }

  .recent-posts h2 {
    font-size: var(--text-2xl);
    line-height: 1.3;
    margin-bottom: 1.5rem;
  }

  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .view-all {
    display: inline-block;
    color: var(--colour-accent-primary);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .view-all:hover {
    color: var(--colour-accent-hover);
  }

  .no-posts {
    color: var(--colour-text-secondary);
    font-style: italic;
  }
</style>
