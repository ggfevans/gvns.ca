---
interface Props {
  title: string;
  author: string;
  coverUrl?: string;
  hardcoverUrl?: string;
  rating?: number;
  progress?: number;
  dateFinished?: string;
  showProgress?: boolean;
  showRating?: boolean;
}

const {
  title,
  author,
  coverUrl,
  hardcoverUrl,
  rating,
  progress,
  dateFinished,
  showProgress = false,
  showRating = false,
} = Astro.props;

const stars = rating
  ? Array.from({ length: 5 }, (_, i) => (i < rating ? '\u2605' : '\u2606'))
  : [];

const formattedDate = dateFinished
  ? new Date(dateFinished).toLocaleDateString('en-GB', {
      month: 'short',
      year: 'numeric',
    })
  : null;
---

<article class="book-card">
  <div class="book-cover">
    {coverUrl ? (
      <img
        src={coverUrl}
        alt={`Cover of ${title}`}
        width="80"
        height="120"
        loading="lazy"
        decoding="async"
      />
    ) : (
      <div class="cover-fallback" aria-hidden="true">
        <span class="cover-icon">&#128214;</span>
      </div>
    )}
  </div>
  <div class="book-info">
    {hardcoverUrl ? (
      <a href={hardcoverUrl} class="book-title-link" target="_blank" rel="noopener noreferrer">
        <h3 class="book-title">{title}</h3>
      </a>
    ) : (
      <h3 class="book-title">{title}</h3>
    )}
    <p class="book-author">{author}</p>
    {showRating && stars.length > 0 && (
      <div class="book-rating" aria-label={`${rating} out of 5 stars`}>
        {stars.map((star) => (
          <span class:list={['star', { filled: star === '\u2605' }]}>{star}</span>
        ))}
      </div>
    )}
    {showProgress && typeof progress === 'number' && (
      <div class="book-progress">
        <div class="progress-bar">
          <div class="progress-fill" style={`width: ${Math.min(progress, 100)}%`} />
        </div>
        <span class="progress-text">{progress}%</span>
      </div>
    )}
    {formattedDate && (
      <p class="book-date">{formattedDate}</p>
    )}
  </div>
</article>

<style>
  .book-card {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-4);
    border: 1px solid var(--colour-border);
    border-radius: 8px;
    background: var(--colour-bg-secondary);
    transition: border-color var(--transition-fast);
  }

  .book-card:hover {
    border-color: var(--colour-p2-rose);
  }

  .book-cover {
    flex-shrink: 0;
    width: 80px;
    height: 120px;
    border-radius: 4px;
    overflow: hidden;
  }

  .book-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cover-fallback {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--colour-bg-tertiary);
    border-radius: 4px;
  }

  .cover-icon {
    font-size: var(--text-2xl);
    opacity: 0.4;
  }

  .book-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
    min-width: 0;
  }

  .book-title-link {
    text-decoration: none;
    color: inherit;
    transition: color var(--transition-fast);
  }

  .book-title-link:hover {
    color: var(--colour-p2-rose);
  }

  .book-title {
    font-size: var(--text-base);
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .book-author {
    font-size: var(--text-sm);
    color: var(--colour-text-secondary);
    margin: 0;
  }

  .book-rating {
    display: flex;
    gap: 2px;
    font-size: var(--text-sm);
  }

  .star {
    color: var(--colour-text-muted);
  }

  .star.filled {
    color: var(--colour-p2-rose);
  }

  .book-progress {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-1);
  }

  .progress-bar {
    flex: 1;
    height: 6px;
    background: var(--colour-bg-tertiary);
    border-radius: 3px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: var(--colour-p2-rose);
    border-radius: 3px;
    transition: width var(--transition-base);
  }

  .progress-text {
    font-size: var(--text-xs);
    font-family: var(--font-mono);
    color: var(--colour-text-secondary);
    white-space: nowrap;
  }

  .book-date {
    font-size: var(--text-xs);
    color: var(--colour-text-muted);
    margin: 0;
    margin-top: auto;
  }
</style>
