---
interface Props {
    current?: "posts" | "archive" | "tags";
}

const { current } = Astro.props;
---

<nav class="gvns-write-nav" aria-label="Write section">
    <a href="/write" class:list={["gvns-write-nav__link", { active: current === "posts" }]}>Posts</a>
    <a href="/write/archive" class:list={["gvns-write-nav__link", { active: current === "archive" }]}>Archive</a>
    <a href="/write/tags" class:list={["gvns-write-nav__link", { active: current === "tags" }]}>Tags</a>
    <a href="/rss.xml" class="gvns-write-nav__link" target="_blank" rel="noopener noreferrer">RSS</a>
</nav>

<style>
    .gvns-write-nav {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .gvns-write-nav__link {
        display: inline-block;
        padding: 0.375rem 0.875rem;
        font-size: var(--text-sm);
        font-weight: 500;
        color: var(--colour-text-secondary);
        background: var(--colour-bg-secondary);
        border-radius: 9999px;
        text-decoration: none;
        transition:
            color var(--transition-fast),
            background-color var(--transition-fast);
    }

    .gvns-write-nav__link:hover {
        color: var(--colour-accent-primary);
        background: var(--colour-bg-tertiary);
    }

    .gvns-write-nav__link:focus-visible {
        outline: 2px solid var(--colour-accent-primary);
        outline-offset: 2px;
    }

    .gvns-write-nav__link.active {
        color: var(--colour-bg-primary);
        background: var(--colour-accent-primary);
    }

    .gvns-write-nav__link.active:hover {
        color: var(--colour-bg-primary);
        background: var(--colour-accent-hover);
    }
</style>
